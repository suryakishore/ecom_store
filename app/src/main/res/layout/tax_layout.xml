<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/sixteenDp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:layout_weight="9"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:text="@string/subTotal"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvSubTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="3"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/sixteenDp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:layout_weight="9"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:text="@string/deliveryCharge"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvDeliveryCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="3"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/sixteenDp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:layout_weight="9"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:text="@string/discount"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="3"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_serviceCharge"
            android:visibility="gone"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/tvServiceChargeTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/sixteenDp"
                android:layout_marginRight="@dimen/sixteenDp"
                android:layout_weight="9"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:text="@string/serviceCharge"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvServiceCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="3"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:padding="@dimen/fiveDp"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/taxesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_weight="1.4"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/tax"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />
            <TextView
                android:id="@+id/tvTaxTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_weight="0.6"
                android:gravity="end"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginEnd="@dimen/tenDp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/taxDetailsRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/taxDetailsLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/fifteenDp"
                android:layout_marginStart="@dimen/fifteenDp"
                android:layout_marginTop="@dimen/fiveDp"
                android:orientation="vertical"
                android:paddingEnd="@dimen/tenDp"
                android:paddingLeft="@dimen/tenDp"
                android:paddingRight="@dimen/tenDp"
                android:paddingStart="@dimen/tenDp">

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>