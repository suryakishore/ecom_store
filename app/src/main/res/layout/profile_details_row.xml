<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_profileDetails_mainTitle"
        android:layout_width="@dimen/zeroDp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fifteenDp"
        android:layout_marginTop="@dimen/thirtyDp"
        android:layout_marginEnd="@dimen/fifteenDp"
        style="@style/Text.20sp.BlackShade.MontserratBold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Main Title" />

    <LinearLayout
        android:id="@+id/linearLayout_profileDetails_subDetailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileDetails_mainTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/zeroPointOneDp"
        android:background="@color/blackShade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_profileDetails_subDetailsContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>