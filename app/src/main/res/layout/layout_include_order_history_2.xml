<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/fogWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.5"
            android:layout_marginTop="@dimen/fiveDp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.8"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteenSp"
                android:text="@string/item"
                android:textColor="@color/xanadu"
                android:layout_gravity="center"
                android:gravity="start"
                android:padding="@dimen/fiveDp"
                android:fontFamily="@font/roboto_bold"
                android:textAllCaps="true"
                android:layout_marginStart="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sixteenSp"
                android:text="@string/price"
                android:textColor="@color/xanadu"
                android:layout_gravity="center"
                android:gravity="end"
                android:fontFamily="@font/roboto_bold"
                android:padding="@dimen/fiveDp"
                android:textAllCaps="true"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginEnd="@dimen/tenDp"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >

            <LinearLayout
                android:id="@+id/llItemContainer"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tenDp"
                android:layout_marginStart="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_marginEnd="@dimen/tenDp"

                >

            </LinearLayout>

        </ScrollView>

        <View
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lobolly" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_weight="2.5"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:weightSum="2.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_weight="1.8"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/subTotal"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/tvSubTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.7"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:visibility="gone"
            android:weightSum="2.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_weight="1.8"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/deliveryCharge"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvDeliveryCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.7"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:weightSum="2.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_weight="1.8"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/discount"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.7"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fiveDp"
            android:weightSum="2.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tenDp"
                android:layout_marginRight="@dimen/tenDp"
                android:layout_weight="1.8"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/serviceCharge"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />

            <TextView
                android:id="@+id/tvServiceCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.7"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/taxesTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1.4"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:text="@string/tax"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvTaxTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.6"
                android:fontFamily="@font/robotoregular"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:textColor="@color/shark"
                android:textSize="@dimen/sixteenSp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/taxDetailsRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/taxDetailsLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/fifteenDp"
                android:layout_marginLeft="@dimen/fifteenDp"
                android:layout_marginTop="@dimen/fiveDp"
                android:orientation="vertical"
                android:paddingStart="@dimen/tenDp"
                android:paddingLeft="@dimen/tenDp"
                android:paddingEnd="@dimen/tenDp"
                android:paddingRight="@dimen/tenDp">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/colorPrimary"
            android:weightSum="2.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/total"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteenSp" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/tweleveDP"
                android:layout_marginRight="@dimen/tweleveDP"
                android:layout_weight="0.6"
                android:fontFamily="@font/roboto_bold"
                android:gravity="right|end"
                android:text="$ 0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteenSp" />

        </LinearLayout>


    </LinearLayout>






</LinearLayout>