<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/twentyDp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twentyFiveDp"
        android:layout_marginEnd="@dimen/fifteenDp"
        android:padding="@dimen/tenDp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close" />

    <com.app.delivxstore.utility.CircleImageView
        android:id="@+id/imageViewDriverRowDriverImage"
        android:layout_width="@dimen/eightyDp"
        android:layout_height="@dimen/eightyDp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/twentyDp"
        android:layout_marginTop="@dimen/tenDp"
        android:layout_marginBottom="@dimen/fourtyDp"
        android:background="@drawable/profile"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivClose" />

    <TextView
        android:id="@+id/textViewDriverRowDriverName"
        android:layout_width="@dimen/zeroDp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twentyDp"
        android:fontFamily="@font/montserrat_bold"
        android:includeFontPadding="false"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteenSp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivClose"
        tools:text="Samsung adieu Electronics" />

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="@dimen/zeroDp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twentyDp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/montserrat_medium"
        android:includeFontPadding="false"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/twelveSp"
        app:layout_constraintEnd_toEndOf="@+id/ivClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDriverRowDriverName"
        tools:text="Hong Kong" />

    <TextView
        android:id="@+id/tvRoleName"
        android:layout_width="@dimen/zeroDp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twentyDp"
        android:includeFontPadding="false"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="@dimen/twelveSp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCityName"
        tools:text="Hong Kong" />

</androidx.constraintlayout.widget.ConstraintLayout>
