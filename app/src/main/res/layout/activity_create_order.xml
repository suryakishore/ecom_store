<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.createOrder.CreateOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/llActionBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/tenDp"
                android:layout_marginLeft="@dimen/tenDp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_back_btn"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/create_order"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteenSp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whisper"
            android:padding="@dimen/fifteenDp"
            android:text="@string/choose_order_type"
            android:textAllCaps="true"
            android:textColor="@color/xanadu"
            android:textSize="@dimen/thirteen_sp"
            app:fontFamily="@font/roboto_bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twentyDp"
            android:layout_marginLeft="@dimen/twentyDp"
            android:layout_marginTop="@dimen/thirtyDp"
            android:layout_marginEnd="@dimen/twentyDp"
            android:layout_marginRight="@dimen/twentyDp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rlSendPackage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/package_state">


                <ImageView
                    android:id="@+id/ivSendPacCheckMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:layout_marginEnd="@dimen/fiveDp"
                    android:layout_marginRight="@dimen/fiveDp"
                    android:src="@drawable/ic_select_on"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivSendPac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/thirtyDp"
                    android:src="@drawable/send_package" />

                <TextView
                    android:id="@+id/tvSendPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivSendPac"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/tenDp"
                    android:layout_marginBottom="@dimen/fifteenDp"
                    android:padding="@dimen/fifteenDp"
                    android:text="@string/send_package"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    app:fontFamily="@font/roboto_medium" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlInventory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteenDp"
                android:layout_marginLeft="@dimen/fifteenDp"
                android:layout_weight="1"
                android:background="@drawable/package_state">


                <ImageView
                    android:id="@+id/ivInvCheckMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:layout_marginEnd="@dimen/fiveDp"
                    android:layout_marginRight="@dimen/fiveDp"
                    android:src="@drawable/ic_select_on"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:id="@+id/ivInventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/thirtyDp"
                    android:src="@drawable/inventory_without_click" />

                <TextView
                    android:id="@+id/tvInventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivInventory"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/tenDp"
                    android:layout_marginBottom="@dimen/fifteenDp"
                    android:padding="@dimen/fifteenDp"
                    android:text="@string/inventory"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/thirteen_sp"
                    app:fontFamily="@font/roboto_medium" />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirtyDp"
            android:background="@color/whisper"
            android:padding="@dimen/fifteenDp"
            android:text="@string/howtheOrder"
            android:textAllCaps="true"
            android:textColor="@color/xanadu"
            android:textSize="@dimen/thirteen_sp"
            app:fontFamily="@font/roboto_bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twentyDp"
            android:layout_marginLeft="@dimen/twentyDp"
            android:layout_marginTop="@dimen/thirtyDp"
            android:layout_marginEnd="@dimen/twentyDp"
            android:layout_marginRight="@dimen/twentyDp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rlPickUp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/package_state">


                <ImageView
                    android:id="@+id/ivPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:layout_marginEnd="@dimen/fiveDp"
                    android:layout_marginRight="@dimen/fiveDp"
                    android:src="@drawable/ic_select_on"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/tvPickUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/twentyDp"
                    android:layout_marginBottom="@dimen/fifteenDp"
                    android:padding="@dimen/tenDp"
                    android:text="@string/pickup"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteenSp"
                    app:fontFamily="@font/roboto_bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDelivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fifteenDp"
                android:layout_marginLeft="@dimen/fifteenDp"
                android:layout_weight="1"
                android:background="@drawable/package_state">


                <ImageView
                    android:id="@+id/ivDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/fiveDp"
                    android:layout_marginEnd="@dimen/fiveDp"
                    android:layout_marginRight="@dimen/fiveDp"
                    android:src="@drawable/ic_select_on"
                    android:visibility="invisible" />


                <TextView
                    android:id="@+id/tvDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/twentyDp"
                    android:layout_marginBottom="@dimen/fifteenDp"
                    android:padding="@dimen/tenDp"
                    android:text="@string/delivery"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteenSp"
                    app:fontFamily="@font/roboto_bold" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/twentyDp"
        android:background="@drawable/rectangle_solid_green_corner"
        android:gravity="center"
        android:padding="@dimen/tenDp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteenSp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>