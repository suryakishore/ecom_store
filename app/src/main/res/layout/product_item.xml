<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.appcompat.widget.AppCompatTextView
      android:layout_marginStart="20dp"
      android:text="Aashirvaad Shudh Chakki Whole Wheat Atta"
      android:gravity="start"
      app:layout_constraintEnd_toStartOf="@+id/tvOrderListTotalPrice"
      android:textColor="@color/shark"
      android:textSize="12sp"
      android:fontFamily="@font/roboto_medium"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="@+id/rlQuantity"
      app:layout_constraintTop_toTopOf="@+id/tvOrderListTotalPrice"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tvOrderListTotalPrice"
      android:layout_marginTop="5dp"
      android:text="$ 12000"
      android:textSize="12sp"
      android:textColor="@color/shark"
      android:fontFamily="@font/robotoregular"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="20dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      />

  <RelativeLayout
      android:id="@+id/rlQuantity"
      android:paddingTop="5dp"
      android:layout_marginEnd="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvOrderListTotalPrice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_silver_bordered"
        />
    <include
        layout="@layout/layout_quantity_plus_minus"/>
  </RelativeLayout>

  <View
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@+id/rlQuantity"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/lightWhite"
      android:visibility="visible"
      />


</androidx.constraintlayout.widget.ConstraintLayout>